<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 text-center">
      <!--Burgers Header Graphic will go here-->
      <h1>Burgers</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-2 col-md-4">

      <h2>Burgs not Eaten</h2>

      <ul>
        {{#each burger}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">EAT IT!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-md-offset-1 col-md-4">
      <h2>Burgs Eaten</h2>

      <ul>
        {{#each burger}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">REMAKE IT!</button>
              </form>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Add a Burger</h2>
      <form class="create-update-form" action="/api/new" method="POST">

        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" name="burger_name">
        </div>

        <div class="form-group">
          <label for="burg-devoured">Eaten?</label><br>
          <input type="radio" name="devoured" value="1"> Devoured<br>
          <input type="radio" name="devoured" value="0" checked> Undevoured
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
