<h1>Burgers</h1>

<h2>Burgs not Eaten</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">EAT IT!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgs Eaten</h2>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">REMAKE IT!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/api/new" method="POST">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>

  <div class="form-group">
    <label for="burg-devoured">Eaten?</label><br>
    <input type="radio" name="devoured" value="1"> Devoured<br>
    <input type="radio" name="devoured" value="0" checked> Undevoured
  </div>

  <button type="submit">Add Burger</button>
</form>
